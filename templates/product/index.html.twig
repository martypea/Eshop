{% extends 'base.html.twig' %}

{% block javascript %}

document.getElementById("button-back").style.visibility = "hidden";

{% endblock %}

{% block title %}Product index{% endblock %}

{% block adminbody %}
    <h3>Products</h3>
    <br>
    <h5>Create new product</h5>
    <br>
      {{ include('product/_form.html.twig') }}
    <br>
    <h5>List of products</h5>
    <br>

    <table class="table table-borderless table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Special Price</th>
                <th scope="col">Store</th>
                <th scope="col">Released</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.specialPrice }}</td>
                <td>{{ product.store }}</td>
                <td>{{ product.released }}</td>
                <td>
                  <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group mr-2" role="group"> 
                    <button type="button" class="btn btn-secondary btn-sm">
                    <a class="text-white" href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>
                    </button>
                    </div>
                    <div class="btn-group" role="group">
                    {{ include('product/_delete_form.html.twig') }}
                    </div>
                  </div> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}